//5

//******************************************************PADDING********************************************************************


import 'package:flutter/material.dart';

void main() {
  runApp(MaterialApp(
    debugShowCheckedModeBanner: false,
    home: Scaffold(
        appBar: AppBar(
          title: Text('hassan'),
        ),
        body: Center(
          child: Container(
            color: Colors.orange,
            child: Padding(
              padding: EdgeInsets.all(25),
              child: Text(
                'hassan',
                style: TextStyle(fontSize: 30),
              ),
            ),
          ),
        )),
  ));
}
  

// 6

//***********************************************************************CARD******************************************************

import 'package:flutter/material.dart';

void main() {
  runApp(MaterialApp(
    home: Scaffold(
      appBar: AppBar(
        title: Text('hassan'),
      ),
      body: Container(
        height: 200,
        width: 200,
        child: Card(
          color: Colors.orange,
            shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(50.0)
            ),
            elevation: 50.0,
            margin: EdgeInsets.all(10.0),
            shadowColor: Colors.red,
        ),
      ),
    ),
  ));
}


// 7

//*****************************************************************************DIVIDER******************************************

import 'package:flutter/material.dart';

void main() {
  runApp(MaterialApp(
    home: Scaffold(
      appBar: AppBar(
        title: Text('hassan'),
      ),
      body: Column(
        children: [
          Card(
            color: Colors.orange,
            shape: RoundedRectangleBorder(
                borderRadius: BorderRadius.circular(50.0)),
            elevation: 50.0,
            margin: EdgeInsets.all(10.0),
            shadowColor: Colors.red,
          ),
          Divider(
            height: 100,
            thickness: 20,
            color: Colors.purple,
            indent: 20,
          ),
          Card(
            color: Colors.orange,
            shape: RoundedRectangleBorder(
                borderRadius: BorderRadius.circular(50.0)),
            elevation: 50.0,
            margin: EdgeInsets.all(10.0),
            shadowColor: Colors.red,
          ),
        ],
      ),
    ),
  ));
}


